<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/wybierz_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wybierz model samochodu:"
        android:textSize="20sp"
        android:padding="12dp"
        android:gravity="center"
        android:elevation="4dp"
        android:background="@android:color/holo_green_light"
        android:layout_marginBottom="16dp"/>

    <RadioGroup
        android:id="@+id/model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/sedan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sedan"
            android:textSize="18sp"
            android:padding="12dp"/>

        <RadioButton
            android:id="@+id/suv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUV"
            android:textSize="18sp"
            android:padding="12dp"/>

        <RadioButton
            android:id="@+id/hatchback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hatchback"
            android:textSize="18sp"
            android:padding="12dp"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wybierz dodatkowe opcje:"
        android:background="@android:color/holo_green_light"
        android:textSize="20sp"
        android:padding="12dp"
        android:gravity="center"
        android:elevation="4dp"
        android:layout_marginBottom="16dp"/>

    <CheckBox
        android:id="@+id/klima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Klimatyzacja"
        android:textSize="18sp"
        android:padding="12dp"/>

    <CheckBox
        android:id="@+id/siedzenie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skórzane siedzenia"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/imageViewzdj"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:visibility="gone"
        android:src="@drawable/sedan"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"/>

    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zatwierdź"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:padding="14dp"
        android:layout_gravity="center"
        android:elevation="4dp"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/textViewPodsumowanie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:padding="12dp"
        android:gravity="center"/>
</LinearLayout>